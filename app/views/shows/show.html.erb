<div class="basic-info clearfix">
	<img class="show-image" src="<%= @show.full_image_url %>">
	<h1><%= @show.name %></h1>
	**more basic info**
	<p><%= @show.description %></p>
</div>

<div class="episodes">
	<h2>Episodes</h2>
	<div class="divider"></div>
	<ul>
		<% @seasons.each do |s| %>
			<li>
				<h3>Season <%= s.season_number %></h3>
				<ul>
					<% s.episodes.each do |s| %>
						<li>
							<%= s.episode_string %> <%= s.name %>
						</li>
					<% end %>
				</ul>
			</li>
		<% end %>
	</ul>
</div>