<h1>All Shows</h1>

<form class="std-form" action="<%= search_shows_url %>" method="GET">
	<input class="search-input" type="text" placeholder="Find a show..." name="q">
	<input class="search-submit" type="submit" value="Search">
</form>

<% if !!current_user %>
	<div class="activities">

		<h2>Recent Activity</h2>

		<% if @activities.length == 0 %>
			Start following some users!
		<% else %>
			<% @activities.each do |activity| %>
				<%= render_activity activity %> <br>
			<% end %>
		<% end %>
		
	</div>
<% end %>